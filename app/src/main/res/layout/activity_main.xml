<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:weightSum="1"
    android:baselineAligned="false"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingBottom="20dp"
    android:paddingTop="10dp">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="University of Engineering And Management, Jaipur"
        android:id="@+id/textView"
        android:gravity="center"
        android:layout_margin="10dp"
        android:textColor="@android:color/holo_red_light" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:weightSum="1"
        android:layout_weight="0.21">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginRight="25dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose Device"
                android:id="@+id/deviceButton"
                android:layout_gravity="center_horizontal"
                android:onClick="deviceSelect" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:id="@+id/deviceList" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="25dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Connect"
                android:id="@+id/connectButton"
                android:onClick="connectBT" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:id="@+id/statusText" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:weightSum="1"
        android:gravity="center"
        android:id="@+id/layout1">

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/toggleButton1"
            android:checked="false"
            android:clickable="true"
            android:layout_weight="0.25"
            android:onClick="line1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="LINE 1"
            android:id="@+id/textView1"
            android:layout_weight="0.25"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="LINE 2"
            android:id="@+id/textView2"
            android:layout_weight="0.25"
            android:gravity="center" />

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New ToggleButton"
            android:id="@+id/toggleButton2"
            android:checked="false"
            android:clickable="true"
            android:layout_weight="0.25"
            android:onClick="line2" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:weightSum="1"
        android:gravity="center"
        android:id="@+id/layout2">

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New ToggleButton"
            android:id="@+id/toggleButton3"
            android:checked="false"
            android:clickable="true"
            android:layout_weight="0.25"
            android:onClick="line3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="LINE 3"
            android:id="@+id/textView3"
            android:layout_weight="0.25"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="LINE 4"
            android:id="@+id/textView4"
            android:layout_weight="0.25"
            android:gravity="center" />

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New ToggleButton"
            android:id="@+id/toggleButton4"
            android:checked="false"
            android:clickable="true"
            android:layout_weight="0.25"
            android:onClick="line4" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:weightSum="1"
        android:gravity="center"
        android:id="@+id/linearLayout3" >

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New ToggleButton"
            android:id="@+id/toggleButton5"
            android:checked="false"
            android:clickable="true"
            android:layout_weight="0.25"
            android:onClick="line5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="LINE 5"
            android:id="@+id/textView5"
            android:layout_weight="0.25"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="LINE 6"
            android:id="@+id/textView6"
            android:layout_weight="0.25"
            android:gravity="center" />

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New ToggleButton"
            android:id="@+id/toggleButton6"
            android:checked="false"
            android:clickable="true"
            android:layout_weight="0.25"
            android:onClick="line6" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:weightSum="1"
        android:gravity="center"
        android:id="@+id/linearLayout4" >

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New ToggleButton"
            android:id="@+id/toggleButton7"
            android:checked="false"
            android:clickable="true"
            android:layout_weight="0.25"
            android:onClick="line7" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="LINE 7"
            android:id="@+id/textView7"
            android:layout_weight="0.25"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="LINE 8"
            android:id="@+id/textView8"
            android:layout_weight="0.25"
            android:gravity="center" />

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New ToggleButton"
            android:id="@+id/toggleButton8"
            android:checked="false"
            android:clickable="true"
            android:layout_weight="0.25"
            android:onClick="line8" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.16"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="F1"
            android:id="@+id/f1Button"
            android:layout_margin="5dp"
            android:onClick="f1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="F2"
            android:id="@+id/f2Button"
            android:layout_margin="5dp"
            android:onClick="f2" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="F3"
            android:id="@+id/f3Button"
            android:layout_margin="5dp"
            android:onClick="f3" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="F4"
            android:id="@+id/f4Button"
            android:layout_margin="5dp"
            android:onClick="f4" />
    </LinearLayout>

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:layout_gravity="center_horizontal"
        android:progress="0"
        android:mirrorForRtl="false"
        android:onClick="progressBar"
        android:clickable="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Clear Text"
        android:id="@+id/clearButton"
        android:layout_gravity="center_horizontal"
        android:onClick="clearText" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/outputText"
        android:layout_margin="10dp"
        android:gravity="center" />

</LinearLayout>